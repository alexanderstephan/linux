conky.config = {

  -- don't print on desktop
  out_to_x = false,
  own_window = false,

  -- show output in console
  out_to_console = true,

  -- work in background
  background = false,

  -- update interval
  update_interval = 1.0,
  total_run_times = 0

}

conky.text = [[  
  ${if_match "${exec pidof vlc}" > "0"}  ${execi 4 audioinfo vlc -a | cut -c 9-} - ${execi 4 audioinfo vlc -t | cut -c 8-}${endif}     ${time %H:%M}  
]]
