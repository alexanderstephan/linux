client.focused_inactive $dark   $dark   $bright
client.urgent           $dark   $dark   $bright



### i3 bar ###

## toggle (hide or show)
bindsym --release $mod+m bar mode toggle

bar {

  ## Call the i3bar with "t" argument allows to use rgba colors!
  ## When activated Tray icons will always appear with fully transparent background!
  i3bar_command i3bar

  ## dock|hide|invisible
  mode dock

  position top

  ## panel height
  height 40

  ## smaler icons
  tray_padding 8

  ## fonts for 1) statusline and 2) workspaces
  font pango:Ubuntu 12
  font pango:Font Awesome

  ## get rid of the numbers in front of the icons
  strip_workspace_numbers yes

  ## run conky script to show ... something
  status_command conky -c $HOME/.config/i3/conky/conkyrc



  colors {
  
    ## color of i3-bar
    background $background
    
    ## color of i3-bar text
    statusline $paneltext
	
    separator $background

    #                  Border    BG            Icon 
    focused_workspace  $border   $background   $active
    active_workspace   $border   $background   $active
    inactive_workspace $border   $background   $inactive
    urgent_workspace   $border   $background   $inactive
  }
}



