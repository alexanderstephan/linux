## install fonts
#pacman -S ttf-bitstream-vera ttf-inconsolata ttf-ubuntu-font-family ttf-dejavu ttf-freefont ttf-linux-libertine ttf-liberation

## stop using bitmaps
#ln -s /etc/fonts/conf.avail/70-no-bitmaps.conf /etc/fonts/conf.d

## add infinality server to pacman.conf
#nano /etc/pacman.conf

#[infinality-bundle]
#SigLevel = Never
#Server = http://bohoomil.com/repo/$arch

#[infinality-bundle-multilib]
#SigLevel = Never
#Server = http://bohoomil.com/repo/multilib/$arch

#[infinality-bundle-fonts]
#SigLevel = Never
#Server = http://bohoomil.com/repo/fonts


## update database and install infinality
#pacman -Syy infinality-bundle infinality-bundle-multilib


## install only specific font with
#pacman -Syy infinality-bundle-fonts
#pacman -Syy infinality-bundle-fonts-extra